# prompt
export PS1="$ "

# some needed var constants
export WINHOME="${HOME}" # HOME in non-cygwin style (same on Mac)

# general env vars used only on this machine
export AV_LOG_FORCE_NOCOLOR=yes

# machine-depended env vars
export GIT_EDITOR=emacsclient
export HOMEBREW_KEEP_INFO=true
export emacsexe="/Applications/Optional/Text/Emacs.app/Contents/MacOS/Emacs"

# the vexatious path stuff
# put back in again by using  launchctl's export command
tmpfile=`mktemp -t "$$.XXXXXXXXXX"`
launchctl export >$tmpfile
source $tmpfile

# some little helper variables
export old_bongu=/Volumes/LastLionBook/Users/bongu/
export old_hallo=/Volumes/wurzel/Users/hallo
