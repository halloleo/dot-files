#
# path stuff
#
function prepend_colon_var {
    eval value=\$$1
    rest=""
    if [ -n "$value" ]; then
        rest=$(echo "$value" | sed "s!$2:!!g" | sed "s!$2!!g" | sed 's!:$!!g')
        [ -n "$rest" ] && rest=":$rest"
    fi
    eval export $1=\"$2$rest\"
}
 
function postpend_colon_var {
    eval value=\$$1
    rest=""
    if [ -n "$value" ]; then
        rest=$(echo "$value" | sed "s!:$2!!g" | sed "s!$2!!g" | sed 's!^:!!g')
        [ -n "$rest" ] && rest="$rest:"
    fi
    eval export $1=\"$rest$2\"
}
 
